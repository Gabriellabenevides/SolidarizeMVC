@model CampanhaModel
@{
    ViewData["title"] = "Cadastrar Campanha";
}

<div class="container bg-dark p-5 rounded-5">

    <div class="mb-5 text-center">
        <h1 class="text-light">Cadastro de Campanhas</h1>
    </div>

    <form method="post" asp-controller="Campanha" asp-action="Cadastrar">

        <div class="mb-3">
            <label for="Campanha" class="form-label text-light">Nome da Campanha:</label>
            <input type="text" class="form-control" asp-for="Nome" id="nomeCampanha" placeholder="Digite o nome da campanha">
            <span class="text-danger" asp-validation-for="Nome"></span>
        </div>

        <div class="mb-3">
            <label for="Descricao" class="form-label text-light">Descrição:</label>
            <textarea class="form-control" asp-for="Descricao" id="descricaoCampanha" placeholder="Descreva a campanha"></textarea>
            <span class="text-danger" asp-validation-for="Descricao"></span>
        </div>

        <div class="mb-3">
            <label for="ValorObjetivo" class="form-label text-light">Valor Objetivo:</label>
            <input type="number" class="form-control" asp-for="ValorObjetivo" id="valorObjetivo" placeholder="Ex: 10000">
            <span class="text-danger" asp-validation-for="ValorObjetivo"></span>
        </div>

        <div class="mb-3">
            <label for="DataInicio" class="form-label text-light">Data de Início:</label>
            <input type="date" class="form-control" asp-for="DataInicio" id="dataInicio">
            <span class="text-danger" asp-validation-for="DataInicio"></span>
        </div>

        <div class="mb-3">
            <label for="DataFinal" class="form-label text-light">Data Final:</label>
            <input type="date" class="form-control" asp-for="DataFinal" id="dataFinal">
            <span class="text-danger" asp-validation-for="DataFinal"></span>
        </div>

        <div class="mb-3">
            <label for="Status" class="form-label text-light">Status:</label>
            <select class="form-control" asp-for="Status" id="status">
                <option value="">Selecione o status</option>
                <option value="@CampanhaModel.StatusCampanha.Aberta">Aberta</option>
                <option value="@CampanhaModel.StatusCampanha.Concluida">Concluída</option>
                <option value="@CampanhaModel.StatusCampanha.Cancelada">Cancelada</option>
            </select>
            <span class="text-danger" asp-validation-for="Status"></span>
        </div>

        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-success w-50">Adicionar Campanha</button>
            <a class="btn btn-primary w-50" asp-controller="Campanha" asp-action="Index">Voltar</a>
        </div>
    </form>
</div>
