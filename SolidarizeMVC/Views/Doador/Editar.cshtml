@model DoadorModel
@{
    ViewData["title"] = "Editar Doador";
}

<div class="container bg-dark p-5 rounded-5">

    <div class="mb-5 text-center">
        <h1 class="text-light">Edição de Doadores</h1>
    </div>

    <form method="post" asp-controller="Doador" asp-action="Editar">
        <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <label for="Nome" class="form-label text-light">Nome:</label>
            <input type="text" class="form-control text-light" asp-for="Nome" id="nome" placeholder="Digite o nome do doador">
            <span class="text-danger" asp-validation-for="Nome"></span>
        </div>

        <div class="mb-3">
            <label for="CPF" class="form-label text-light">CPF:</label>
            <input type="text" class="form-control text-light" asp-for="CPF" id="cpf" placeholder="Digite o CPF do doador">
            <span class="text-danger" asp-validation-for="CPF"></span>
        </div>

        <div class="mb-3">
            <label for="Email" class="form-label text-light">E-mail:</label>
            <input type="email" class="form-control text-light" asp-for="Email" id="email" placeholder="Ex: email@gmail.com">
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>

        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-success w-50">Editar Doador</button>
            <a class="btn btn-primary w-50" asp-controller="Doador" asp-action="Index">Voltar</a>
        </div>
    </form>
</div>